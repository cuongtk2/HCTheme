<UserControl x:Class="HCTheme.TestUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HCTheme"
             xmlns:hc="clr-namespace:HCTheme.Controls"
             mc:Ignorable="d"
             Background="{DynamicResource bg-300}"
             d:DesignHeight="650"
             d:DesignWidth="240">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HCTheme;component/Styles/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HCTheme;component/Styles/DefaultLight.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Expander Style="{DynamicResource CadExpander}" 
              Header="Cad "           
              >
        <StackPanel>
            <GroupBox Header="Cad Group box"
                      MinHeight="80"
                      Style="{DynamicResource CadGroupBox1}">
                <Label Content="label in group" />
            </GroupBox>
            <GroupBox Header="Group box1"
                      MinHeight="80">

            </GroupBox>
            <hc:HcTextBoxHint Header="Head"
                              Text="HcTextBoxHint"
                              HorizontalContentAlignment="Right" />
            <hc:HcTextBoxHeader Header="Head"
                                Text="HcTextBoxHeader"
                                HorizontalContentAlignment="Right" />

            <hc:HcGrid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="24" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="24" />


                </Grid.RowDefinitions>
                <Label Content="5555" />
                <Button Content="Draw"
                        Grid.Column="1" />

            </hc:HcGrid>
            <Label Content="Label"
                   BorderThickness="1,1,1,0.5" />
            <TextBox x:Name="tb1"
                     Text="CadGridTextBox"
                     Style="{DynamicResource CadGridTextBox}"
                     BorderThickness="1,0.5,1,1" />
            <TextBox x:Name="tb2"
                     Text="CadTextBox"
                     Style="{DynamicResource CadTextBox}"
                     BorderThickness="1,0.5,1,1" />
            <Button Style="{DynamicResource ButtonMeasure}"                    
                    Width="32"
                    >
                
            </Button>
           
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                
                
                <Button Content="Xem"
                        Style="{DynamicResource AcceptButton}" />
                <Button   Style="{DynamicResource ButtonSelection}"
                          Width="25" Grid.Row="1">

                </Button>
                <Button Style="{DynamicResource ButtonPicker}"
                        Grid.Column="1"
                        Width="25">

                </Button>
                <Button Style="{DynamicResource ButtonSymbol}" 
                        FontSize="18"
                        Height="22"
                        Content="{DynamicResource CharSettingsGear}"
                        Grid.Column="2" Width="24" />
                <Button Style="{DynamicResource ButtonSymbol}"
                        FontSize="14"
                        Content="{DynamicResource CharTriangularRuler}"
                        Grid.Column="1"
                        Grid.Row="1"
                        Width="24" />
                <Button Style="{DynamicResource ButtonSymbol}"
                        FontSize="20"
                        Content="{DynamicResource CharUndefine}"
                        Grid.Column="2"
                        Grid.Row="1"
                        Width="24" />
                <Button Style="{DynamicResource ButtonSymbol}"
                        FontSize="14"
                        Height="16"
                        
                        Grid.Column="2"
                        VerticalContentAlignment="Center"
                        Grid.Row="2"
                        VerticalAlignment="Center"
                        Width="26">
                    <Path Data="{DynamicResource ThinRigthArrow}" Stroke="{DynamicResource TextActive}" Margin="0"></Path>
                    </Button>
                <Button Style="{DynamicResource ButtonSymbol}"
                        FontSize="16"
                        Height="18"
                        Content="✏️"
                        Grid.Column="1"
                        VerticalContentAlignment="Center"
                        Grid.Row="2"
                        Width="26">
                </Button>
                <Button Style="{DynamicResource ButtonSymbol}"
                        FontSize="16"
                        Height="20"
                        Content="⿻"
                        Grid.Column="0"
                        VerticalContentAlignment="Center"
                        Grid.Row="2"
                        Padding="-1"
                        Width="26">
                </Button>


            </Grid>
            <hc:HcSwitch OffText="Tắt"
                         OnText="Bật" IsChecked="False"/>
            <hc:HcSwitch OffText="Tắt"
                         OnText="Bật"
                         IsChecked="True" />
            <TextBox Text="12345" />
            <CheckBox Content="Checkox" />
        </StackPanel>
        

    </Expander>
    
</UserControl>
