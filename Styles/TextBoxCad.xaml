<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="CadTextBox"
           TargetType="{x:Type TextBox}">

        <Setter Property="OverridesDefaultStyle"
                Value="True" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />

        <Setter Property="Foreground"
                Value="{DynamicResource TextCad }" />
        <Setter Property="CaretBrush"
                Value="{DynamicResource TextActive}" />
        <Setter Property="BorderThickness"
                Value="1" />

        <Setter Property="HorizontalContentAlignment"
                Value="Left" />
        <Setter Property="VerticalContentAlignment"
                Value="Bottom" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="AutoWordSelection"
                Value="True" />

        <Setter Property="FontFamily"
                Value="{DynamicResource MSFont}" />
        <Setter Property="FontSize"
                Value="{DynamicResource FontSize13}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}" />
                        <ScrollViewer Margin="2,0,0,0"
                                      x:Name="PART_ContentHost" />

                    </Grid>




                    <ControlTemplate.Triggers>

                        <Trigger Property="IsFocused"
                                 Value="True">
                            <Setter TargetName="border"
                                    Property="BorderBrush"
                                    Value="{DynamicResource BlueLight}" />
                            <Setter TargetName="border"
                                    Property="Background"
                                    Value="{DynamicResource TextBoxBackgroundSelect}" />
                            <Setter Property="Foreground"
                                    Value="{DynamicResource TextBoxTextSelect}" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter TargetName="PART_ContentHost"
                                    Property="Foreground"
                                    Value="{DynamicResource DisableLight}" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>



    </Style>
</ResourceDictionary>