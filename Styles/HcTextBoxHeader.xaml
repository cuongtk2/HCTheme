<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hc="clr-namespace:HCTheme.Controls"
                    >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="DefaultDark.xaml" />
    </ResourceDictionary.MergedDictionaries>




    <Style TargetType="{x:Type hc:HcTextBoxHeader}" >

        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Foreground" Value="{DynamicResource TextActive}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BackgroundDark}"/>
        <Setter Property="HeaderBrush"
                Value="{DynamicResource TextNormal}" />
        <Setter Property="CaretBrush"
                Value="{DynamicResource TextActive}" />
        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
        <Setter Property="HorizontalContentAlignment"
                Value="Right" />
        <Setter Property="HeaderBrush" Value="{DynamicResource TextNormal}"/>
        <Setter Property="Padding"
                Value="2" />

        <Setter Property="FontFamily"
                Value="{DynamicResource MSFont}" />
        <Setter Property="FontSize"
                Value="{DynamicResource FontSize13}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate  TargetType="{x:Type hc:HcTextBoxHeader}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="1"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" x:Name="tieude" 
                                   Foreground="{TemplateBinding HeaderBrush}" 
                                   Margin="5,2"
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Bottom"
                                   FontSize="{DynamicResource FontSize12}"
                                   Text="{TemplateBinding Header }"
                                       />
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Border x:Name="border"  Background="Transparent"/>

                            <ScrollViewer x:Name="PART_ContentHost" Background="Transparent" Margin="2" />
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"                                               
                                              RecognizesAccessKey="True" />

                        </Grid>
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="{TemplateBinding BorderBrush}"/>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="border" Property="Background"  Value="{DynamicResource BlueLight}"  />

                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">

                            <Setter TargetName="border"
                                    Property="Background"
                                    Value="{DynamicResource BlueLight}"  />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter  Property="Foreground" Value="{DynamicResource BorderLight}" />
                            <Setter  Property="HeaderBrush" Value="{DynamicResource BorderLight}" />
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>



    </Style>

</ResourceDictionary>