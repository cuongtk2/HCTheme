<ResourceDictionary 
 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
   xmlns:hc="clr-namespace:HCTheme.Controls"
    
    >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="DefaultLight.xaml" />        
    </ResourceDictionary.MergedDictionaries>


    <Style  TargetType="{x:Type hc:HcWindow}">
        
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="TitleBarHeight" Value="35"/>
        <Setter Property="WindowStyle" Value="None" />
       
        <Setter Property="Background" Value="{DynamicResource BackgroundMain}" />
        <Setter Property="Foreground" Value="{DynamicResource TextActive}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}" />
        <Setter Property="TitleBarBackground" Value="{DynamicResource TitleWinBackground}" />
        <Setter Property="ResizeMode" Value="CanResizeWithGrip" />
        
        <Setter Property="FontFamily"
                Value="{DynamicResource MSFont}" />
        <Setter Property="FontSize"
                Value="{DynamicResource FontSize13}" />

        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        

        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="{Binding TitleBarHeight, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                              GlassFrameThickness="1"
                              
                              NonClientFrameEdges="None"
                              CornerRadius="8"
                              ResizeBorderThickness="4" />
            </Setter.Value>
        </Setter>

        

        
        


        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type hc:HcWindow}">
                    <Border  Background="{TemplateBinding Background}" CornerRadius="4">


                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>

                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" 
                                    Background="{Binding TitleBarBackground, RelativeSource={RelativeSource AncestorType={x:Type hc:HcWindow}}}" 
                                    BorderBrush="{DynamicResource BorderLight}" 
                                    CornerRadius="4,4,0,0"
                                    BorderThickness="0,0,0,1">

                                <Grid  >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" x:Name="logo" 
                                               Foreground="{DynamicResource BlueLight}"
                                               Margin="5,0"
                                       HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Text="AJSt" 
                                               FontWeight="Bold" 
                                               
                                               FontSize="16"
                                               >
                                        <TextBlock.Effect>
                                            <DropShadowEffect ShadowDepth="2"
                                                              Direction="315"
                                                              BlurRadius="1" />
                                        </TextBlock.Effect>

                                    </TextBlock>
                                    <TextBlock Grid.Column="1" x:Name="tieude" 
                                               Foreground="{DynamicResource TitleWinText}" 
                                               Margin="5,0"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Text="{Binding Path=Title, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window} }" 
                                               FontWeight="Normal" FontSize="16"
                                       />
                                    <Button Grid.Column="2" x:Name="CloseButton" 
                                           Command="{x:Static hc:HcWindow.CloseCommand}"
                                            WindowChrome.IsHitTestVisibleInChrome="True" >


                                        <Button.Template>
                                            <ControlTemplate>
                                                <Grid>
                                                    <Ellipse  x:Name="el" 
                                                              Height="16" Width="16" 
                                                              Fill="{DynamicResource danger}"  />
                                                    <Rectangle  x:Name="el1"
                                                                Height="14" Width="8" 
                                                                Margin="0,0,0,8" StrokeThickness="3"
                                                                Fill="{DynamicResource danger}" 
                                                                Stroke="{Binding TitleBarBackground, RelativeSource={RelativeSource AncestorType={x:Type hc:HcWindow}}}" 
                                                                Visibility="Hidden"/>

                                                </Grid>

                                                <ControlTemplate.Triggers>
                                                   

                                                    <Trigger Property="IsMouseOver" Value="true">
                                                        <Setter TargetName="el" Property="Fill" 
                                                                Value="{Binding TitleBarBackground, RelativeSource={RelativeSource AncestorType={x:Type hc:HcWindow}}}"  />
                                                        <Setter TargetName="el" Property="Stroke" Value="{DynamicResource danger}"  />
                                                        <Setter TargetName="el" Property="StrokeThickness" Value="2"  />
                                                        <Setter TargetName="el1" Property="Visibility" Value="Visible"/>


                                                    </Trigger>

                                                   


                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>

                                    </Button>

                                </Grid>
                            </Border>
                            <ContentPresenter x:Name="PART_ClientArea"
                                              Grid.Row="1"
                                              Margin="4"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}" />



                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>

        </Setter>
    </Style>
</ResourceDictionary>