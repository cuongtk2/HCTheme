<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hc="clr-namespace:HCTheme.Controls"
                    >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="DefaultDark.xaml" />
    </ResourceDictionary.MergedDictionaries>

   

    <Style TargetType="{x:Type hc:HcTextBoxHint}" >

        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Foreground" Value="{DynamicResource TextActive}"/>
        <Setter Property="HorizontalContentAlignment"
                Value="Right" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource BorderDark}"/>
        <Setter Property="HeaderBrush"
                Value="{DynamicResource TextNormal}"/>
        <Setter Property="CaretBrush"
                Value="{DynamicResource TextActive}" />
        <Setter Property="FontFamily"
                Value="{DynamicResource MSFont}" />
        <Setter Property="FontSize"
                Value="{DynamicResource FontSize13}" />

        <Setter Property="Template" >
            <Setter.Value>
                <ControlTemplate  TargetType="{x:Type hc:HcTextBoxHint}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="13"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="1"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="1" x:Name="tieude" 
                                   Foreground="{TemplateBinding HeaderBrush}" 
                                   Margin="5,0"
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Bottom"
                                   FontSize="{DynamicResource FontSize12}"
                                    Text="{TemplateBinding Header}"
                                       />
                        <Grid Grid.Row="2">
                            <Border x:Name="border" Grid.Row="2" Background="Transparent"/>

                            <ScrollViewer x:Name="PART_ContentHost" Background="Transparent" Margin="2" />
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                  RecognizesAccessKey="True" />

                        </Grid>
                        <Border x:Name="underborder" Grid.Row="3" BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1"
                                Background="{TemplateBinding BorderBrush}"/>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="tieude" Property="Foreground"  Value="{DynamicResource BlueLight}"  />
                            <Setter TargetName="underborder" Property="BorderBrush"  Value="{DynamicResource BlueLight}"  />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="tieude" Property="Foreground"  Value="{DynamicResource BlueLight}"  />
                            <Setter TargetName="underborder" Property="BorderBrush" Value="{DynamicResource BlueLight}"  />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter  Property="Foreground"
                                     Value="{DynamicResource DisableLight}" />
                            <Setter  Property="HeaderBrush"
                                     Value="{DynamicResource BorderLight}" />
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>

            </Setter.Value>
        </Setter>




    </Style>

</ResourceDictionary>